</style>
  <body>
    <div class="container px-5 mt-2">
        <div>
            <div style="font-size:30px;"><i><b>Hisab<span style="color:orange;">Kitab</span>    </b></i></div>
            <small>Taking invoice management to the next level</small>        
        </div>
        <hr>
    </div>
    <div class="container px-5">
        <br>
    <h4> Your Search Results</h4>
    <br>
    <hr>
        <% if(invoices.length>0){ %>
            <div class="container m-2" style="border:1px solid grey;">
                <div class="row text-start no-gutter m-1">
                    <div class="col-3" style="font-weight: 600;border:2px solid grey;">Invoice No</div>
                    <div class="col-3" style="font-weight: 600;border:2px solid grey;"> Name</div>
                    <div class="col-2" style="font-weight: 600;border:2px solid grey;">Date</div>
                    <div class="col-3" style="font-weight: 600;border:2px solid grey;">Amount</div>
                    <div class="col-1" style="font-weight: 600;border:2px solid grey;">Status</div>
                </div>
                <% var i=0 %>
                <div style="max-height:600px;overflow-y:scroll;">
                    <% for(var j=invoices.length -1; j> -1;j--){ %>
                        <% var inv= invoices[j] %>
                        <% if(i%2==0){ %>
                            <div class="row text-start no-gutter m-1" style="background-color: rgb(223, 223, 223);" >
                                <div class="col-3" style="border-right:1px solid black;" ><a target="_blank" href="/invoice/<%= inv._id %>"><%= inv.ref_no %></a></div>
                                <div class="col-3" style="border-right:1px solid black;"><%= inv.first_name %> </div>
                                <div class="col-2" style="border-right:1px solid black;"><%= inv.charge_date %></div>
                                <div class="col-3" style="border-right:1px solid black;">Rs.<%= inv.booking_charge_amount %></div>
                                <div class="col-1"><%= inv.taxable_status.substring(0,1) %></div>
                                <hr class="m-0">
                                <% i=i+1 %>
                            </div>
                        <% }else{%>
                            <div class="row text-start no-gutter m-1" >
                                <div class="col-3" style="border-right:1px solid black;" ><a target="_blank" href="/invoice/<%= inv._id %>"><%= inv.ref_no %></a></div>
                                <div class="col-3" style="border-right:1px solid black;"><%= inv.first_name %> </div>
                                <div class="col-2" style="border-right:1px solid black;"><%= inv.charge_date %></div>
                                <div class="col-3" style="border-right:1px solid black;">Rs.<%= inv.booking_charge_amount %></div>
                                <div class="col-1"><%= inv.taxable_status.substring(0,1) %></div>
                                <hr class="m-0">
                                <% i=i+1 %>
                            </div>
                        <% } %>
                    <% } %>
                </div> 
            </div>
        <% }else{ %>
            <div class="text-center"> No Such Invoice !</div>
        <% } %>
    </div>



